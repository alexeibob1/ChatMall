                  <RowConstraints minHeight="10.0" prefHeight="30.0" />
               </rowConstraints>
            </GridPane>
         </content>
      </ScrollPane>
      <TextArea fx:id="eMessage" layoutX="304.0" layoutY="871.0" prefHeight="42.0" prefWidth="564.0" promptText="Write your message here..." />
      <Button fx:id="btnSend" layoutX="869.0" layoutY="871.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="108.0" text="Send" />
      <Label fx:id="lUsers" layoutX="999.0" layoutY="54.0" prefHeight="35.0" prefWidth="218.0" text="NOW IN THE CHAT" />
