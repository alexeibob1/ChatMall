                  <Image url="@../icons/minimize.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <ScrollPane fx:id="spMessages" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" layoutX="303.0" layoutY="42.0" pannable="true" prefHeight="872.0" prefWidth="675.0">
